  #INCLUDE "{$L_GDATA}/sqr/HEAD01.inc"

  let   $msg1= 'Αναλυτική Λογιστική'
  let   $msg2= 'Λογαριασμοί Αναλυτικής - Κωδικοί Εμπορευμάτων'

  print $msg1                   (2,) Center
  print $msg2                   (3,) Center

  print 'Λογαριασμός'           (5, 1,20) 
  print 'Περιγραφή'             (5,+1,40) 
  print 'Είδος'                 (5,+1,15) 
End-Heading              

