Begin-Footing {FOOT-SIZE}
 #INCLUDE "{$L_GDATA}/sqr/FOOT01.inc"
End-Footing

Begin-Heading {HEAD-SIZE}
 #INCLUDE "{$L_GDATA}/sqr/HEAD01.inc"

 print 'статистийа йимгсеым пекатым' (3,+1) center

 let $msg='апо : ' || $apo_hmniapr || ' еыс : ' || $evs_hmniapr

 print $msg (4,+1) center

 print 'пЭКГ'                            (6, 1,20)
 print 'тЛчЛА'                           ( ,+1,20)
 print 'а/а'                             ( ,+1, 3)
 print 'пЕЯъОДОР'                        ( ,+1,20)
 print 'пОСЭТГТА'                        ( ,+1,#POS_CHAR)
 print 'дИАЖОЯэ'                         ( ,+1,#POS_CHAR)
 print 'пОСОСТЭ'                         ( ,+1,#POS_PERC)

 print 'аНъА'                            ( ,+1,#AJI_CHAR)
 print 'дИАЖОЯэ'                         ( ,+1,#AJI_CHAR)
 print 'пОСОСТЭ'                         ( ,+1,#POS_PERC)


