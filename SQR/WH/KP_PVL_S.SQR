from  sy_synalprog a,
      wh_kin       b,
      wh_eidh      c,
      wh_pvlomades d
where c.pvlomada = d.pvlomada
[$SQLCMDTMHMA]
[$SQLCMDPVL]
  and c.kvdikos  = b.eidos
