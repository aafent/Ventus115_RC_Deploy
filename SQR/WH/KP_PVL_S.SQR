 !  begin-sql
 !    insert into s_synal (synal,  posothta,      ajia)
 !    values             ($synal, #s_ypol_p, #s_ypol_a)
 !  end-sql
  end-if
  let #f_ypol_p = #f_ypol_p + #s_ypol_p
  let #f_ypol_a = #f_ypol_a + #s_ypol_a

