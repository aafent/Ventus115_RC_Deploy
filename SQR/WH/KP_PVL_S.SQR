begin-procedure find_tmhma

begin-select
a.perigrafh     &tmhma_p  () NOP

  let $pr = $pr || ' - тлгла : ' || &tmhma_p

from ap_tmhma a
where a.kvdikos = #tmhma
end-select

end-procedure

! ------------------------------------------------------------------------------

begin-procedure find_pvl

begin-select
a.perigrafh     &pvlhths_p  () NOP

  let $pr = 'пыкгтгс : ' || &pvlhths_p

from sy_pvlhtes a
 where a.kvdikos = #pvl
end-select

end-procedure

