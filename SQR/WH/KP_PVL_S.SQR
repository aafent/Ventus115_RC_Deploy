! **************** P V L *****************************************************

begin-procedure pvl

begin-select distinct 
aa.pvlomada     &pvlomada    (,10,15)    
aa.perigrafh    &perigrafh   (,+1,24)

 let $pvlomada = &pvlomada
 do getypol

from  wh_kin               b,
      s_kp_pvl_synal       aa
where aa.eidos    = b.eidos
  and b.cid       = $cid
  and b.synal     = $synal
  and b.hmeromhnia between $apohm and $evshm
group by aa.pvlomada
order by aa.perigrafh
end-select

  do printtop
  next-listing
  next-listing

end-procedure

