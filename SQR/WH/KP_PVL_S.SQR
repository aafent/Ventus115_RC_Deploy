begin-procedure find_synal

begin-select
a.synal                   (, 1,10)
a.epvnymia     &epvnymia  (,+1,40)
b.dieyuynsh    &dieyuynsh (,+1,30)
b.polh         &polh      (,+1,15)
c.perigrafh               (,+1,20)
b.thl          &thl       (,+1,20)

 next-listing

from sy_synal a ,sy_synaltopos b,ap_nomos c
where a.synal   = $synal
and   a.synal   = b.synal
and   c.kvdikos = isnull(b.nomos,0)
end-select

end-procedure

