  move #cnt_omada to $omada 0000
  move &pvl_per   to $per
  move &pvl_kvd   to $pvl_kvd

  print $omada  (, 1,15)
  print $per    (,+1,40)

  do insert1 
  let #cnt=1

  do main2

  if  $exist_eidh = 'T'
