begin-procedure main2

begin-select distinct
a.eidos   &eidos () NOP

 if  $exist_eidh = 'F'
 let $exist_eidh = 'T'
 end-if
 let $eidos     = &eidos
 let $omada_eid = ''
 let $per_eid   = ''
 
 do get_omadaeid
 do insert2

 let #cnt=#cnt+1

from   wh_eidh01 a, wh_eidhmore b
where  b.cid     =      $cid
and    a.eidos   =      b.eidos
and    b.energo  is not null 
and    b.logar   is     null
and    a.tmhma   =      #tmhma
and    a.pvlomada=      $pvl_kvd
end-select

end-procedure

