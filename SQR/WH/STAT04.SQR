begin-procedure get_pvl (#k,:$p,:$pvl_pr,$cid)

begin-select
kvdikos2   &ep_1  () NOP
perigrafh  &ep_2  () NOP
 
 let $pvl_pr = &ep_1
 let $p      = &ep_2

from sy_pvlhtes
where kvdikos = #k
end-select

end-procedure

