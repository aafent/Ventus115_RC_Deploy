begin-procedure getypoloipo($cid,$synal,$hmer,:#ypoloipo,:#xrevsh,:#pistvsh)

 move 0 to #ypoloipo
display $cid
display $hmer
display #xrevsh
display #pistvsh
display #ypoloipo
display $synal

 execute -C1 syp_getglypol @cid      = $cid,
                           @hmer     = $hmer,
                           @xrevsh   = #xrevsh       output,
                           @pistvsh  = #pistvsh      output,
                           @ypoloipo = #ypoloipo     output,
                           @synal    = $synal


end-procedure

