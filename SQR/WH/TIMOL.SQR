begin-procedure IsLianikh($parkvd,:$flag_lianikh)

let $flag_lianikh='F'

begin-select
a.stoixeio ()

 if &a.stoixeio='05' 
   let $flag_lianikh='T'
 end-if

from ap_par a
where parkvd=$parkvd
end-select
end-procedure

