begin-procedure print_msk
  let #s = 0
  execute whp_getmsk4 @cid=$cid, @eidos=$pvlomada, @hmer=$evshm, @msk=#msk out
  @ypoloipo = #ypol out
 ! if #ypol <> 0
!    print #cnt              (, 01,03)
    print $pvlomada         (, 01,15)
    print $perigr           (,+01,30)
    print #msk              (,+01,15) edit {MASK2}
    print #ypol             (,+01,15) edit {MASK1}
    let #s = #msk * #ypol
    let #ss = #ss + #s
    let #cnt = #cnt + 1
    next-listing
 ! end-if

end-procedure

