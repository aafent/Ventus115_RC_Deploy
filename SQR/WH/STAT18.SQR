begin-procedure aa  

begin-sql -C1
insert into ##tmp_aa (aa)
select distinct a.aa from wh_kin a
where  a.hmeromhnia between $apohm and $evshm
and    a.cid = $cid
[$SQLPVL]
end-sql   

begin-sql -C2
insert into ##tmp_aa (aa)
select distinct a.aa from wh_kin a
where  a.hmeromhnia between $apohm and $evshm
and    a.cid = $cid
[$SQLPVL]
end-sql   

end-procedure

