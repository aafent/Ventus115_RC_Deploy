begin-procedure fkeidhinf 

begin-select
a.inf               &inf    () NOP
c.kvdinf            &kvdinf () NOP
a.perigrafh         &per    () NOP

     let $inf     = &inf
     let #kvdinf  = &kvdinf

     let $SQLEE   = ' and f_eja is not null '

    !   do find_kin_fkeidhinf

     let #eja_pos = #pos
     let $SQLEE   = ' and f_eis is not null '

    !   do find_kin_fkeidhinf

     let #eis_pos = #pos
     let #p       = #eja_pos - #eis_pos


 if #p <> 0

    if #cnt = 1
       print  $synal (, 1,10)
       print  $epvn  (,+1,25)
       print  $diey  (,+1,20)
       print  $polh  (,+1,15)
       next-listing
       let #cnt = #cnt + 1
    end-if
    print  &inf (, 1,15)
    print  &per (,+1,30)
    let #s_pos      = #s_pos      + #p   
    let #ss_pos     = #ss_pos     + #p
    !               print #eja_pos   (,+1,12) edit {MASK3}
    !               print #eis_pos   (,+1,12) edit {MASK3}
    print #p      (,+1,12) edit {MASK3}
    next-listing
 end-if

from  wh_fkeidhinf a,wh_eidhinf c ,wh_kin b
where a.kvdinf     =       c.kvdinf
and   a.kvdinf     =       100     
and   c.kvdikos    =       b.eidos
and   b.hmeromhnia between $apohm and $evshm
and   a.inf        =       c.inf
and   b.cid        =       c.cid
and   c.cid        =       $cid
and   b.cid        =       $cid
and   b.synal      =       $synal
[$SQLCMD]
group by a.inf,c.kvdinf,a.perigrafh
order by a.perigrafh
end-select

   if #cnt <> 1
      print ' '                (, 1,15)
      print ' '                (,+1,30) 
      print '------------'     (,+1,12) 

      next-listing
      print  '” ’ Õ œ À ¡  : ' (, 1,15)
      print ' '                (,+1,30)
      print #s_pos             (,+1,12) edit {MASK3}
   end-if

end-procedure

