begin-procedure main

 let #ss_pos = 0

begin-select
a.synal      &synal  () NOP   ! (, 1,10)
a.epvnymia   &epvn   () NOP   ! (,+1,25)
b.dieyuynsh  &diey   () NOP   ! (,+1,20)
b.polh       &polh   () NOP   ! (,+1,15)
isnull(d.sort,0)     () NOP

   let $synal = &synal
   let $epvn  = &epvn
   let $diey  = &diey
   let $polh  = &polh
   

   let #p     = 0
   let #s_pos = 0
   let #cnt   = 1

  ! if $table = 'wh_fkeidhinf'
  !    do fkeidhinf
  ! end-if

  ! if $table = 'wh_pvlomades'
    do pvlomades
  ! end-if

  if #cnt <> 1
   next-listing 
   next-listing need=8
  end-if

from  sy_synal a,sy_synaltopos b,sy_synalprog c,s_liaros_sort d
where a.synal  = b.synal
and   c.synal  = b.synal
and   a.synal  = c.synal
and   b.topos  = 0
and   a.synal  *= d.synal
[$SQLPVL]
group by a.synal,a.epvnymia,b.dieyuynsh,b.polh,d.sort
order by d.sort,a.synal
end-select

   print ' '                 (, 1,15)
   print ' '                 (,+1,30) 
