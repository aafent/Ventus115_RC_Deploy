! *************************************************************************

begin-procedure chk_kint1_kint2

begin-select
b.kvdikos    &eidos    ()  NOP  
b.perigrafh            ()  NOP  

    let $eidos = &eidos 
     do kin
     do kint1
     do kint2

     if    #t0 != #t1
        or #t0 != #t2
        or #t1 != #t2

        print $eidos       (, 1,15) 
        print &b.perigrafh (,+1,40) 
     
     if $err_t0 = 'дем упаявеи'
        print $err_t0 (,+1,7)
     else
        print #t0          (,+1,10) edit {MASK2}
     end-if

     if $err_t1 = 'дем упаявеи'
        print $err_t1 (,+1,7)
     else
        print #t1          (,+1,10) edit {MASK2}
     end-if

     if $err_t2 = 'дем упаявеи'
        print $err_t2  (,+1,7)
     else
        print #t2          (,+1,10) edit {MASK2}
     end-if

     if  $do_upd  = 'YES'
     and $err_t0 != 'дем упаявеи'
     and $err_t1 != 'дем упаявеи'
     and $err_t2 != 'дем упаявеи'
      !  do upd1
     end-if

     next-listing
     end-if

from  wh_eidh b ,wh_eidhmore c
where b.kvdikos = c.eidos
and   c.cid     = $cid
and   c.energo is not null
  !  and   b.kvdikos = '2STARTER KIT'
order by b.kvdikos
end-select
  new-page
end-procedure

! *************************************************************************

begin-procedure upd1
begin-sql
update wh_kint2 set ypoloipo = #t1
where  cid = $cid and  eidos = $eidos
end-sql
end-procedure

! *************************************************************************

begin-procedure upd2
begin-sql
update wh_kint2 set desmeysh = #desmeysh
where  cid = $cid and  eidos = $eidos
end-sql
end-procedure

! *************************************************************************

begin-procedure kin

    let #t0 = 0
    let $err_t0 = ' '          

begin-select
sum(isnull(a.posothta,0)*syntel_p) &eis () NOP

  let #t0 = &eis
  let $err_t0 = 'упаявеи'

from wh_kin a,ap_par b
where a.eidos = $eidos
and   a.cid   = $cid 
and   a.parkvd = b.parkvd
and   b.f_eis is not null
[$SQLHMER]
 ! [$SQLAPOUHKH]
end-select

begin-select
sum(isnull(a.posothta,0)*syntel_p) &eja () NOP

  let #t0 = #t0 - &eja
  let $err_t0 = 'упаявеи'

from wh_kin a,ap_par b
where a.eidos = $eidos
and   a.cid   = $cid 
and   a.parkvd = b.parkvd
and   b.f_eja is not null
[$SQLHMER]
 ! [$SQLAPOUHKH]
end-select

  if $err_t0 != 'упаявеи'
     let $err_t0 = 'дем упаявеи'
  end-if

end-procedure

! *************************************************************************

begin-procedure kint1

    let #t1 = 0     
    let $err_t1 = ' '          

begin-select
sum(a.apo_p)+sum(a.ago_p)+sum(a.dia_p)+sum(a.gen_p)-sum(a.pvl_p) &t1 () NOP

  let #t1 = &t1
  let $err_t1 = 'упаявеи'

from wh_kint1 a
where a.eidos = $eidos
and   a.cid   = $cid 
[$SQLHMER]
 ! [$SQLAPOUHKH]
end-select

  if $err_t1 != 'упаявеи'
     let $err_t1 = 'дем упаявеи'
  end-if

end-procedure

! *************************************************************************

begin-procedure kint2

    let #t2 = 0     
    let $err_t2 = ' '          

begin-select
a.ypoloipo    &t2   () NOP
a.desmeysh    &desm () NOP

  let #t2   = &t2
  let #desm = &desm
  let $err_t2 = 'упаявеи'

from wh_kint2 a
where a.eidos = $eidos
and   a.cid   = $cid 
 ! [$SQLAPOUHKH]
end-select

  if $err_t2 != 'упаявеи'
     let $err_t2 = 'дем упаявеи'
  end-if

end-procedure

! *************************************************************************

begin-procedure parag
  let $epikefalida = '2'
begin-select
b.eidos    &parag_eidos () NOP
sum(b.posothta_parag - b.paral_posothta) &diafora () NOP

  let #desmeysh = &diafora
  let $eidos    = &parag_eidos

  print  &parag_eidos  ( ,1,15)
  print  #desmeysh     (,+1,14) edit {MASK4}
  print  #desm         (,+1,14) edit {MASK4}

  do kint2

  if $upd = 'YES'
  !  do upd2
  end-if
  next-listing

from sy_parag a,sy_paragdet b
where a.aa = b.aa
and   a.status <> 9
and   a.cid = $cid
group by b.eidos
having  sum( b.posothta_parag - b.paral_posothta) <> 0
end-select

end-procedure

