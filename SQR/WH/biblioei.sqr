begin-procedure get_kathgoria_title($kathgoria,:$kathgoria_title)

move '' to $kathgoria_title

begin-select
perigrafh () NOP
	move &perigrafh to $kathgoria_title
from wh_fkeidhinf 
where kvdinf = 1 and inf = $kathgoria
end-select

end-procedure


