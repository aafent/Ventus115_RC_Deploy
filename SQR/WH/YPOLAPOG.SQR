  print 'еъДОР          '             (7, 1, 15)
  print 'пЕЯИЦЯАЖч      '             (7,+1, 50)
  print '    пОСЭТГТА'                ( ,+1, 12)
  print 'тИЛч йЭСТОУР'                ( ,+1, 12)
  print 'йЭСТОР уПОКОъПОУ'            ( ,+3, 16)
  print '-'                           (8, 1,132) Fill

