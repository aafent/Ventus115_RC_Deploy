 execute app_geteom    $evshm,   $evshm output
 execute app_floatcnv  $plhuoss, #plhuos output
 
 if $drast = '*'
    let $SQLCMDDR   = ' '
 else 
    let $SQLCMDDR   = ' and c.drast   = ' || $idrast
    do find_drast
 end-if
   
     ! if $tmhma = '*'
     !  execute app_repmsg ' '                                                  
     !  execute app_repmsg ' '                                                  
     !  execute app_repmsg ' '                                                  
     !  execute app_repmsg '                            ΟΧΙ ΟΛΑ ΤΑ ΤΜΗΜΑΤΑ ΜΑΖΙ'
     !  execute app_repmsg ' '                                                  
     !  execute app_repmsg '                             ΕΝΑ ΕΝΑ ΚΑΙ ΣΙΓΑ ΣΙΓΑ'
     !  stop
     ! end-if 

 if $tmhma != '*'
    let #tmhma = $tmhma
    do find_tmhma
    let $SQLCMDTMHMA = 'and d.tmhma = '|| $tmhma
 end-if

 if $pvl = '*'
    let $SQLCMDPVL = ''
 else 
    let $SQLCMDPVL = 'and exists (select v.synal from sy_synalprog v where a.synal = v.synal and v.pvlhths =' || $pvl || ')'
    do find_pvl
 end-if

! Πωλήσεις -------------------
 if #ord = 1
  let $pord = 'ΠΩΛΗΣΕΙΣ '
  let $SQLCMDORD1 =  'order by 3 desc'
 end-if

 do main 

End-Report

