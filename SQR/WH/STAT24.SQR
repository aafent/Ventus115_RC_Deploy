begin-procedure main
 
  let #x = 1   

begin-select 
             ! LOOPS=100
                       print #x                (, 1, 3) EDIT {MASK1}
a.synal                      &synal            (,+1,10)
b.epvnymia                   &epvnymia         (,+1,25)
sum(pvl_p)                   &pvl_p            (,+1,11) EDIT {MASK6}
sum(pvl_a)                   &pvl_a            (,+1,11) EDIT {MASK6}
   
       let $synal = &synal 

       let #pvl_p      = &pvl_p
       let #pvl_a      = &pvl_a


  if #plhuos <= #x 
   
    do end

  end-if

       let #x = #x + 1

     next-listing

    display #x

from  wh_kint3     a, 
      sy_synal     b, 
      ap_epaggelma c,
      wh_eidhinf   e,
      wh_eidh01    d

where a.synal       = b.synal 
and   a.eidos       = e.kvdikos 
and   d.eidos       = e.kvdikos 
and   d.eidos       = a.eidos   
and   a.cid         = $cid
and   a.cid         = e.cid
and   a.hmeromhnia between $apohm and $evshm
and   c.kvdikos     = b.epaggelma 
and  e.kvdinf       not in (100,200)
[$SQLCMDTMHMA]
[$SQLCMDPVL]
[$SQLCMDDR]
[$SQLCMD]
group by a.synal,b.epvnymia
order by 
[$SQLORD]
end-select

end-procedure

