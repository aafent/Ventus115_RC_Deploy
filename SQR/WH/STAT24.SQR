begin-procedure find_perpvl
  
begin-select
e.perigrafh                          &per12 () NOP

  let $per12 = &per12

from wh_pvlomades e  
where  e.pvlomada    = '2MPS'
end-select

end-procedure
! ------------------------------------------------------------------------------
begin-procedure find_tmhma
 move $tmhma to #tmhma
begin-select
a.perigrafh     &tmhma_p  () NOP

  let $pr = $pr || ' - ΤΜΗΜΑ : ' || &tmhma_p

from ap_tmhma a
where a.kvdikos = #tmhma
end-select
end-procedure
! ------------------------------------------------------------------------------
begin-procedure find_pvl
begin-select
a.perigrafh     &pvlhths_p  () NOP

  let $pr = $pr || ' - ΠΩΛΗΤΗΣ : ' || &pvlhths_p

from sy_pvlhtes a
where a.kvdikos = #pvl
end-select
end-procedure
! ------------------------------------------------------------------------------
begin-procedure find_drast
begin-select
a.perigrafh     &drast_p  () NOP

  let $pr = 'ΔΡΑΣΤΗΡΙΟΤΗΤΑ : ' || &drast_p

from ap_drast a
where a.kvdikos = $drast
end-select
end-procedure
