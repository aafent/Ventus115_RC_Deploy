! ******************************************************************
begin-procedure getoikos($eidos, :$oikos)
  move '' to $oikos
begin-select 
b.perigrafh              () NOP
  move &b.perigrafh to $oikos
from wh_eidhinf a, wh_fkeidhinf b
where a.kvdikos = $eidos
  and a.kvdinf = 1
  and a.kvdinf = b.kvdinf
  and a.inf    = b.inf
end-select
end-procedure
