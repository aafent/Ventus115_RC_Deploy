          break
  when = 'QM720+'
          let $ins_per2 = $ins_per2 || '1/7.20/'
          break
  when = 'QM730'
          let $ins_per2 = $ins_per2 || '1/7.30/'
          break
  when = 'QM730+'
          let $ins_per2 = $ins_per2 || '1/7.30/'
          break
  when = 'QM740'
