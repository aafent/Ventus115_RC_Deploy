          break
  when = 'QM740+'
          let $ins_per2 = $ins_per2 || '1/7.40/'
          break
  when = 'QM750'
          let $ins_per2 = $ins_per2 || '1/7.50/'
          break
  when = 'QM750+'
          let $ins_per2 = $ins_per2 || '1/7.50/'
          break
  when = 'QM760'
          let $ins_per2 = $ins_per2 || '1/7.60/'
          break
  when = 'QM760+'
          let $ins_per2 = $ins_per2 || '1/7.60/'
          break
  when = 'QM770'
          let $ins_per2 = $ins_per2 || '1/7.70/'
          break
  when = 'QM770+'
          let $ins_per2 = $ins_per2 || '1/7.70/'
          break
  when = 'QM780'
          let $ins_per2 = $ins_per2 || '1/7.80/'
          break
  when = 'QM780+'
          let $ins_per2 = $ins_per2 || '1/7.80/'
