Begin-Heading {HEAD-SIZE}
 #INCLUDE "{$L_GDATA}/sqr/HEAD01.inc"
 
  if $epil='1'
   print 'AΝΑΛΥΤΙΚΗ ΚΑΤΑΣΤΑΣΗ ΠΑΓΙΩΝ' (3,+1) center
 else
    print 'ΣΥΓΚΕΝΤΡΩΤΙΚΗ ΚΑΤΑΣΤΑΣΗ ΠΑΓΙΩΝ' (3,+1) center
 end-if
 ! Αφαιρεσα 20
 print 'ΚΩΔΙΚΟΣ ΠΑΓΙΟΥ'           (6,1,25)
 print 'ΠΕΡΙΓΡΑΦΗ'                (,+1,40)
 print 'ΗΜ.ΕΝΑΡΞΗΣ ΑΠΟΣΒΕΣΕΩΝ'    (,+1) 
 print '/AΙΤΙΟΛΟΓΙΑ ΚΙΝΗΣΗΣ'      (7,26)
 print 'ΑΝΑ-'                     (,51,4)  
 !print 'Κ/Κ'                     (,+1,3)   
 print 'ΠΕΡΙΓΡΑΦΗ ΚΙΝΗΣΗΣ'        (,+1,50)
 print 'ΣΥΝΤΕΛ'                   (,+1,6)   
 print 'ΥΠ'                       (,+1,2)
 print 'ΣΥ'                       (,+1,2)
 print 'ΠΟΣΟΤΗΤΑ'                 (,+1,8) 
 print 'ΑΞΙΑ'                     (,+1) 
 print 'ΦΟΡΑ'                     (8,51,4)   
 print 'ΑΠΟΣΒ%'                   (,107,6)
 print 'ΥΠ'                       (,117,2)

