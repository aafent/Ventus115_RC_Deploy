end-procedure
! ***************************************************************************
begin-procedure totse
	    next-listing
	    print 'ΣΥΝΟΛΟ ΣΕ ΜΕΤΑΦΟΡΑ' (,5)
            do printtotse
            next-listing
	    new-page
            print $prev_kvdikos      (,1,25)  
            print $prev_perigrafh    (,+1,40) 
            print $prev_hm_enarjhs      (,+1) 
	    next-listing 
	    print 'ΣΥΝΟΛΟ ΑΠΟ ΜΕΤΑΦΟΡΑ' (,5)
            do printtotse
            next-listing
         
end-procedure 

! ******************************************************************************
begin-procedure printtotse
	    print  #pos_se_metaf       (,120,5)  edit 99999
            print #ajia_se_metaf        (,+1,7) edit 9999999
end-procedure
! *******************************************************************************
begin-procedure printgentotals
	next-listing
        print 'ΓΕΝΙΚΟ ΣΥΝΟΛΟ'  (,5)
	do printtotse
end-procedure
