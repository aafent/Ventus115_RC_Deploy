   add 1 to #lines
   print $aitia6               (+1,25,26)
 end-if
 if $aitia7<>''
   add 1 to #lines
   print $aitia7               (+1,25,26)
 end-if
 if $aitia8<>''
   add 1 to #lines
   print $aitia8               (+1,25,26)
 end-if 
 if $aitia9<>''
   add 1 to #lines
   print $aitia9               (+1,25,26)
 end-if
 if $aitia10<>''
   add 1 to #lines
   print $aitia10               (+1,25,26)
