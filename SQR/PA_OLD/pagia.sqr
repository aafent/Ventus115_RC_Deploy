 print 'KΩΔΙΚΟΣ ΠΑΓΙΟΥ'      (,+1,25)
 print 'ΠΕΡΙΓΡΑΦΗ'           (,+1,40)
 print 'ΕΝΑΡΞΗ ΑΠ.'          (,+1,10)
 print 'ΚΑΤΗΓΟΡΙΑ'           (,+1,10)
 print '%ΑΠΟΣΒ.'             (,+1,7)   
 print 'ΛΟΓ/ΣΜΟΣ'            (,102,6)
 print '/ΑΙΤΙΟΛΟΓΙΑ'         (+1,30)   

End-Heading
