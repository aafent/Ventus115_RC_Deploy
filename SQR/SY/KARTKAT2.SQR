begin-procedure findtropos (#aa)
begin-select
b.perigrafh           &tropos (,+1, 8)
  
  let $tropos = &tropos

from sy_parmas a, sy_troposplhr b
where aa = #aa
and   a.tropos_plhr = b.kvdikos
end-select
end-procedure

