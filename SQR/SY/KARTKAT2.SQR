begin-procedure zeropin(#ln)
  move 1   to #i
  move 0   to #n
  while #i <= #ln 
    put #n into tmhmata(#i) xrevsh
    put #n into tmhmata(#i) pistvsh
    put #n into tmhmata(#i) ex_xre
    put #n into tmhmata(#i) ex_pis
    add 1 to #i
  end-while
end-procedure

