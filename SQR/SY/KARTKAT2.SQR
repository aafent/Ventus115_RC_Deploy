begin-procedure findekp (#aa,:#ajia)
begin-select
ajia      &ajia      (,+1, 9) edit {MASK4}
  let #ajia = &ajia
from sy_partotals
where kvdikos = 20
and   aa = #aa
end-select
end-procedure

