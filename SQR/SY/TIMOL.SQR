begin-procedure print-msgs (#aa)

  move #tmp_msg
  move 1 to #inx

  While #inx < 11

begin-select
substring(a.msg_ids, #inx, 1)    &msg_id	() NOP
from sy_parmas a
where aa = #aa
end-select

begin-select 
b.note						(,15)
	next-listing
from sy_par_msg
where msg_id = &msgid
order by inx
end-select

  let #inx = #inx + 1

  end-while

end-procedure

