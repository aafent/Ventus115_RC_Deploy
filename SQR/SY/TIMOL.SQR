begin-procedure getplhr(#tropos, :$p_perigrafh)
move '' to $p_perigrafh
begin-select
p.perigrafh	() NOP
	move &p.perigrafh to $p_perigrafh
from sy_troposplhr p
where kvdikos = #tropos
end-select
end-procedure

