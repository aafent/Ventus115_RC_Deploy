! ******************************************************************************

begin-procedure totals (#aa, :#net_value, :#tfpa1, :#tfpa2)
  
  move 0 to #net_value
  move 0 to #tfpa1
  move 0 to #tfpa2

begin-select 
a.fpa				() NOP
sum(a.ajia)	&ajia		() NOP
sum(a.ajia_fpa) &ajia_fpa	() NOP

  let #net_value = #net_value + &ajia
  if (&a.fpa = 6) or (&a.fpa = 8)
     let #tfpa1 = #tfpa1 + &ajia_fpa
  else
     let #tfpa2 = #tfpa2 + &ajia_fpa
  end-if

from sy_pardet a
where a.aa = #aa
group by a.fpa		
end-select

end-procedure

! ******************************************************************************

begin-procedure getsxet (#aa, :$sx_parkvd, :$sx_seira, :#sx_parno)

  move '' to $sx_parkvd
  move '' to $sx_seira
  move 0  to #sx_parno

begin-select
s.parkvd		() NOP
s.seira			() NOP
s.parno			() NOP

  move &s.parkvd to $sx_parkvd
  move &s.seira  to $sx_seira
  move &s.parno  to #sx_parno

from sy_parsxet s
where s.aa = #aa
end-select
end-procedure

! ******************************************************************************

begin-procedure eidh (#aa)

  move 1 to #inx

begin-select 
a.aux_code				(,,03)
a.eidos					(,,07)
  print ' '				(,,01)
a.posothta      &a.posothta             () NOP
	let #tmp = &a.posothta * 10
	print #tmp			(,,09) edit 000000000
a.ajia					() NOP

  if  &a.posothta <> 0
      let #timh = &a.ajia / &a.posothta
  else
      let #timh = &a.ajia * 1
  end-if
  let #tmp = #timh * 10

  print #tmp			        (,,06) edit 000000
  
  let #inx  = #inx + 1

from sy_pardet a
where a.aa = #aa
end-select

  while #inx < 16
        print ' '	         	(,,11)	fill
        print 0                         (,,09)  edit 000000000
        print 0                         (,,06)  edit 000000
	let #inx  = #inx + 1
  end-while

end-procedure

