! ***** FIND_ELE_PARKVD
begin-procedure find_ele_parkvd
 
 move '1620' to $ele_parkvd
 if $parkvd='524' 
    move '2630' to $ele_parkvd
 end-if
 if $parkvd='526' 
    move '2630' to $ele_parkvd
 end-if
 if $parkvd='527' 
    move '2630' to $ele_parkvd
 end-if
 if $parkvd='528' 
    move '2630' to $ele_parkvd
 end-if
end-procedure 
