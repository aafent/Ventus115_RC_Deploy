begin-procedure getdata(#aa, $parkvd, :$plhr, :#pvlhs, :#ekpt, :#kauarh, :#fpa1, :#fpa2, :#loipa)

  move '' to $plhr
  move 0  to #pvlhs
  move 0  to #ekpt
  move 0  to #kauarh
  move 0  to #fpa1
  move 0  to #fpa2
  move 0  to #loipa

  move 0  to #syntel

! TROPOS PLHRVMHS

  move '–' to $plhr

begin-select
p.f_xrevsh			() NOP
p.f_pistvsh			() NOP
p.syntel_xp			() NOP
   move &p.syntel_xp to #syntel
from ap_par p
where parkvd = $parkvd
end-select

    


begin-select
t.aa				() NOP
t.kvdikos			() NOP
t.ajia				() NOP
t.fpa				() NOP

    if &t.kvdikos = 1
       let #kauarh = #kauarh + &t.ajia
    end-if

    if &t.kvdikos = 4
       if (&t.fpa = 8) or (&t.fpa = 6)
          let #fpa1 = #fpa1 + &t.ajia
       else
          let #fpa2 = #fpa2 + &t.ajia
       end-if
    end-if

from sy_partotals t
where t.aa = #aa
end-select

    let #pvlhs = #kauarh + #fpa1 + #fpa2

    let #pvlhs = #pvlhs  * #syntel
    let #ekpt  = #ekpt   * #syntel
    let #kauarh= #kauarh * #syntel
    let #fpa1  = #fpa1   * #syntel
    let #fpa2  = #fpa2   * #syntel
    let #loipa = #loipa  * #syntel

end-procedure

