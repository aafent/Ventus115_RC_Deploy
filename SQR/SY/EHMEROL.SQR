	!ADR move &met.d2  to $apohm
	move &met.inx to #last_inx

	display 'TASOS : ' noline
	display  #mhxar


from sy_buf1 met
where met.cid   = $cid
  and met.xrhsh = #xrhsh
  and met.id    = 'ELHMERPVL1'
  and met.d2    < $apohm
  and met.inx in ( select max(met2.inx)
  		     from sy_buf1 met2
		    where met2.cid   = $cid
		      and met2.xrhsh = #xrhsh
		      and met2.id    = 'ELHMERPVL1'
		      and met2.d2    < $apohm
		 )
end-select


