! *************************************************************************

begin-procedure findxrhsh($cid,$hmer,:#xrhsh)

move 0 to #xrhsh

begin-select
xrhsh 
   move &xrhsh to #xrhsh
from ap_xrhsh
where cid = $cid
  and $hmer between xrhsh_arxh and xrhsh_telos
end-select

end-procedure

