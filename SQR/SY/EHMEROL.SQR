begin-procedure set_flagaa (#aa,$parkvd,$seira,#parno)

 ! execute -C2 syp_aaflag @FE='SQL', @aa=#aa, @job='S', @flag_no = 1, @flag_val = 'X', 
 !			@parkvd=$parkvd, @seira=$seira, @parno=#parno

