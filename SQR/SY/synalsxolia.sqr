! ****************************************************************************

begin-procedure main

begin-select 
distinct a.synal                   &synal         () NOP
b.epvnymia                         &epvn          () NOP

 let $synal = &synal

  print &synal          (, 1,10)
  print &epvn           (,+1,44)

 ! if #ypol = 1
 !    do getypol  
 ! end-if

 next-listing

 do print_sx
 next-listing
 next-listing

from  sy_synalsxolia  a,
      sy_kvdinf       c,
      sy_synal        b

where a.synal  = b.synal
and   a.kvdinf = c.kvdikos
and   a.hmeromhnia between $apohm and $evshm
[$SQLCMD]

end-select
  
end-procedure

! ****************************************************************************
begin-procedure print_sx 
begin-select
convert(char(8),a.hmeromhnia,3)    &hmer          () NOP
c.kvdikos                          &kvd           () NOP
a.sxolio                           &perigr        () NOP

  print &hmer           (,12,10)
  print &kvd            (,+1, 5)
  print &perigr         (,+1,40)
 next-listing

from  sy_synalsxolia  a,
      sy_kvdinf       c
where a.synal  = $synal
and   a.kvdinf = c.kvdikos
order by a.synal,a.hmeromhnia,a.kvdinf
end-select
end-procedure

! ****************************************************************************

begin-procedure getypol 



                     display     $synal 
                     display     $evshm
                     display     $cid
                     display     #xrevsh 
                     display     #pistvsh
                     display     #ypol
execute syp_getypol  @synal    = $synal, 
                     @hmer     = $evshm, 
                     @cid      = $cid,
                     @xrevsh   = #xrevsh out,
                     @pistvsh  = #pistvsh out,
                     @ypoloipo = #ypol out
 
  print #xrevsh                   ( ,+1,13) edit {MASK1}
  print #pistvsh                  ( ,+1,13) edit {MASK1}
    let #ypoloipo = #xrevsh - #pistvsh
  print #ypoloipo                 ( ,+1,13) edit {MASK1}
end-procedure

