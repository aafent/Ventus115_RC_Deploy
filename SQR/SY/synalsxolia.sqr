 input $ievshm  'evshm'
 input $iypol  'ypol'

 execute app_datecnv $iapohm, $apohm output, $apohmpr output
 execute app_datecnv $ievshm, $evshm output, $evshmpr output

 unstring $iypol  by '"' into $filler1 $ypol   $filler1

 move $ypol to #ypol 

 do main

