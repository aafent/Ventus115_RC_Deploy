  #INCLUDE "{$L_GDATA}/sqr/HEAD01.inc"



  print '                   ' (3,) Center
  let $hmer_str='ΑΠΟ : ' || $hmerapopr || '  ΕΩΣ : ' || $hmerevspr
  print $hmer_str             (4,) center

  print '     '                                 (6, 1, 5) 
End-Heading              

