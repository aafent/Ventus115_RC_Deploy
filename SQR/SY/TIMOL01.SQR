begin-procedure gettot2(#aa, :#epibar_a, :#epibar_fa )
  move 0 to #epibar_a
  move 0 to #epibar_fa
begin-select
sum(ajia) &ajia_a () NOP
  let #epibar_a = &ajia_a
from sy_partotals 
where aa = #aa
and   kvdikos = 3
end-select
begin-select
sum(ajia) &ajia_fa () NOP
    let #epibar_fa = &ajia_fa
from sy_partotals 
where aa = #aa
and   kvdikos = 10
end-select
end-procedure

