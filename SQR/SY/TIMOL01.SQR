begin-procedure gettot(#aa,:#fpa_k1,:#fpa_p1,:#fpa_a1,:#fpa_k2,:#fpa_p2,:#fpa_a2,:#kyd,:#eisprajh,:#telikh)

 execute -C1 syp_timrettot @aa       = #aa,
                       @fpa_k1   = #fpa_k1 out,
                       @fpa_p1   = #fpa_p1 out,
                       @fpa_a1   = #fpa_a1 out,
                       @fpa_k2   = #fpa_k2 out,
                       @fpa_p2   = #fpa_p2 out,
                       @fpa_a2   = #fpa_a2 out,
                       @kyd      = #kyd    out,
                       @eisprajh = #eisprajh out,
                       @telikh   = #telikh   out

end-procedure

