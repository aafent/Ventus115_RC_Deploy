begin-procedure find_logar($eidos,$cid,:$logar)
 let #cnt = 0
begin-select
a.logar       &logar () NOP
  let $logar = &logar
  let #cnt = #cnt + 1
	show $eidos
	show $cid
from wh_eidhmore a
where a.eidos = $eidos
and   a.cid   = $cid
and   a.logar is not null
end-select
  if #cnt = 0
     let $stopmsg=' ΔΕΝ ΥΠΑΡΧΕΙ ΛΟΓΑΡΙΑΣΜΟΣ ΑΝΑΛΥΤΙΚΗΣ ΛΟΓΙΣΤΙΚΗΣ ΓΙΑ ΤΟ ΕΙΔΟΣ '||$eidos
     execute app_repmsg $stopmsg
     stop
  end-if
  if #cnt > 1
     let $stopmsg = ' ΥΠΑΡΧΟΥΝ ΔΥΟ ΛΟΓΑΡΙΑΣΜΟΙ ΓΙΑ ΤΟ ΕΙΔΟΣ ' || $eidos
     execute app_repmsg $stopmsg
     stop
  end-if

end-procedure

