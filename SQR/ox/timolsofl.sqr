begin-procedure findgenmsg($cid,:$genmsg)

  let $genmsg = 'F'
  let $stat='CIDGENMSG'||$cid

begin-select
s_value      () NOP
 
  if &s_value = 'ON'
     let $genmsg = 'T'
  else 
     let $genmsg = 'F'
  end-if

from ap_status
where id     ='SY'
and   status =$stat
end-select
    let $genmsg = 'F'
end-procedure

! ------------------------------------------------------------------------------
 
begin-procedure findgentroplh(#tropos,:$gentroplh,$cid)

  let $gentroplh = 'F'

begin-select
s_value      () NOP
 
  if &s_value = 'ON'
     let $gentroplh = 'T'
  else 
     let $gentroplh = 'F'
  end-if

from ap_status
where id     ='SY'
and   status ='GENTROPLH'+$cid
