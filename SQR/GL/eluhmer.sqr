#DEFINE   FOOT-SIZE               1
#DEFINE   HEAD-LINE               4

#DEFINE   DATEMASK         DD/MM/YY
#DEFINE   MASK1              000000
#DEFINE   MASK19             999999
#DEFINE   MASK2      99999999999.99c
#DEFINE   MASK20     99999999999.9Bc
#DEFINE   MASK3        999999999.99c

#DEFINE	  dp_prev	1
#DEFINE	  ta_prev       2
#DEFINE	  dp_total	3
#DEFINE	  ta_total	4
