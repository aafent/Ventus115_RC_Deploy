 CREATE-ARRAY NAME=totals
  	      SIZE= 7 
              FIELD=xre:number=0
	      FIELD=pis:number=0

! dim1 : DP previus totals
! dim2 : TA previus totals
! dim3 : DP totals
! dim4 : TA totals
! dim5 : DP date totals
! dim6 : TA date totals

