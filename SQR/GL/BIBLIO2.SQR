begin-procedure getxrhsh

begin-select 
convert(datetime,xrhsh_arxh)  &xrhsh_arxh () NOP
   move &xrhsh_arxh to $startdate
from  ap_xrhsh
where cid = $cid
and   $apohm between xrhsh_arxh and xrhsh_telos
end-select

end-procedure

