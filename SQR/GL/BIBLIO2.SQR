begin-procedure find_ajies_eidoys

begin-select
c.syntel_a                                      () NOP
c.syntel_p                                      () NOP
c.f_eis                                         () NOP
c.f_eja                                         () NOP

from  ap_par c
where c.parkvd = &a.parkvd
end-select

move '' to $omada

begin-select
d.omada   () NOP
   move &d.omada to $omada
from  ap_omadapar d
where d.parkvd = &a.parkvd
and   d.omada  in ('AGORES','PVLHSEIS','DIAKIN','APOGRAFH')
end-select

     move 0 to #pvl_qt
     move 0 to #pvl_aj
     move 0 to #ago_qt
     move 0 to #ago_aj
     move 0 to #dia_qt

     let #pos = &a.posothta * &c.syntel_p
     let #aji = &a.ajia     * &c.syntel_a
 
     if &c.f_eis != ''
        let #pos = #pos * (+1)
        let #aji = #aji * (+1)
     else
        let #pos = #pos * (-1)
        let #aji = #aji * (-1)
     end-if
  
 evaluate $omada
   when = 'PVLHSEIS'
          let #pvl_qt  = #pos * (-1)
          let #pvl_aj  = #aji * (-1)
          break

   when = 'AGORES'
          let #ago_qt  = #pos 
          let #ago_aj  = #aji
          break

   when = 'DIAKIN'
          let #dia_qt  = #pos
          let #dia_aj  = #aji
          break

   when = 'APOGRAFH'
          let #ago_qt  = #pos 
          let #ago_aj  = #aji
          break
           
   when = ''
          let #pvl_qt  = #pos * (-1)
          let #pvl_aj  = #aji * (-1)
          break

 end-evaluate

    let #s_ago_qt  = #s_ago_qt + #ago_qt
    let #s_ago_aj  = #s_ago_aj + #ago_aj
    let #s_pvl_qt  = #s_pvl_qt + #pvl_qt
    let #s_pvl_aj  = #s_pvl_aj + #pvl_aj
    let #s_dia_qt  = #s_dia_qt + #dia_qt
    let #ypol      = #ypol + #ago_qt - #pvl_qt + #dia_qt

end-procedure

