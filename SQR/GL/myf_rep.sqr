  print 'Επωνυμία'                 ( ,+2,35)
  print 'Διεύθυνση'                ( ,+2,30)
  print 'Αρ.Στοιχ.'                ( ,+2,10)
  print '     Αξία'                ( ,+1,11)

end-heading
