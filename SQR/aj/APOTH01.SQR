begin-procedure subtotals

   next-listing

   print 'Σύνολο Ημέρας  ['               (,54,16)
   print $day                             (,+1,08) edit {DATEMASK}
   print ']'                              (,+1,01)
   print #daytot                          (,+9,12) edit {MASK1}

   next-listing

   let #total = #total + #daytot
   move 0 to #daytot

