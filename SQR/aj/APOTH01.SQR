#DEFINE   MASK2          99999

Begin-Setup
 ASK    $L_GDATA   'GDATA '
 #INCLUDE "{$L_GDATA}/sqr/SETUP01.inc"

End-Setup

Begin-Report
 #INCLUDE "{$L_GDATA}/sqr/REPORT01.inc"
 move $L_CID  to $cid
 
 input $icid     'company ID     '
 input $ieidos   'eidos ajiogr   '

 unstring $ieidos by '"' into $filler $eidos $filler
 unstring $icid   by '"' into $filler $cid   $filler

 if $cid = '='
    execute app_retdefcid $cid, $cid out
 end-if
 
 if $eidos = 'Ε' or
    $eidos = 'E'
     move '01'               to $typ_ajio
     move 'Επιταγών'        to $typos
     move '33%'             to $xartofylakio
 end-if
 if $eidos = 'Σ' or
    $eidos = 'S'
     move '1'               to $typ_ajio
     move 'Συναλλαγματικών' to $typos
     move '310000%'         to $xartofylakio
 end-if

 if $typ_ajio = ''
    show clear-screen (24,1) 'Λάθος Είδος Αξιογράφου' beep
    stop
 end-if

 do main

End-Report

