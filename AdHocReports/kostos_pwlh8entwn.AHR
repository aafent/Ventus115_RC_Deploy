/** PCA*LIB AdHoc-Reports **/
/** Saved : 2009-04-15 **/
select k.eidos, e.perigrafh,
max(k.kostos) as kostos,
sum(k.pvl_p) as posothta_pvlhsevn,
sum(k.pvl_p) * max(k.kostos) as kostos_pvlhsevn,
sum(k.pvl_a) as ajia_pvlhsevn,
sum(k.pvl_a) - (sum(k.pvl_p) * max(k.kostos)) as margin_pvlhsvn
from wh_kostosv1 k, wh_eidh e
where 1=1
and k.eidos = e.kvdikos
and k.cid='10'
and k.apouhkh='1'
and k.aux_code='000'
and k.xrhsh=2009
group by k.eidos, e.perigrafh
order by k.eidos
